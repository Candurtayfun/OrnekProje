@model Talep
@{
    ViewBag.Title = "TalepDegerlendir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background-color: #eee;
    }

    *[role="form"] {
        max-width: 530px;
        padding: 15px;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 0.3em;
    }

        *[role="form"] h2 {
            margin-left: 5em;
            margin-bottom: 1em;
        }
</style>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container">

    <h2>Degerlendirme Formu</h2>
    @using (Html.BeginForm("TalepDegerlendir", "Admin", FormMethod.Post, new { id = "sign_up" }))
    {
        @Html.HiddenFor(a=>a.Id)
        <div class="form-group">
            <label for="adi" class="col-sm-3 control-label">Degerlendirme(Olumlu/Olumsuz)</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.Degerlendirme.DegerlendirmeSonucu, new { @class = "form-control", placeholder = "(Olumlu/Olumsuz)", required = "required", type = "text", autofocus = "autofocus" })
            </div>
        </div>
        <div class="form-group">
            <label for="soyadi" class="col-sm-3 control-label">Degerlendirme Tarihi</label>
            <div class="col-sm-9">
                @Html.EditorFor(a => a.Degerlendirme.DegerlendirmeZamani, new { htmlAttributes = new { @class = "form-control", required = "required", type = "date" } })
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Açıklama</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.Degerlendirme.Aciklama, new { @class = "form-control", placeholder = "Açıklama", required = "required", type = "text" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
                <button type="submit" class="btn btn-primary btn-block">Değerlendir</button>
            </div>
            <div class="m-t-25 m-b--5 align-center">
                @Html.ActionLink("Raporlar(Değerlendirmeler)", "Rapor")
            </div>
        </div>
    }
    <!-- /form -->
</div> <!-- ./container -->


